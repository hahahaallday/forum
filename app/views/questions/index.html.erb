<h1>Got Doubts? What is your Question?</h1>

<div class="sort">
	<%= link_to "Sort by last Reply" , questions_path( :order => "Update" , :keyword => @search_by ) , :class => "btn btn-primary" %>
	<%= link_to "Sort by Count of Reply" , questions_path( :order => "Reply" , :keyword => @search_by ) , :class => "btn btn-primary" %>
	<%= link_to "Sort by Default" , questions_path(:keyword => @search_by ) , :class => "btn btn-primary" %>
</div>

<table class ="table">	
	<% @questions.each do |question| %>

		<tr>
			<td>
				<!-- #number or type -->		
			</td>
			<td width = 30%>
				<%= link_to question.topic , question_path(question) %>
			</td>
			<td width = 20%>
				<%= link_to question.description , question_path(question) %>
			</td>
			<td width = 10%>
				<%= question.user.nickname %>
			</td>
			<td width = 10%>
				<%= question.answers.count %>
			</td>
			<td width = 10%>
				<%= question.answers.last.try(:updated_at) %>
			</td>
			<td width = 10%>
				<%= link_to 'Edit', edit_question_path(question) , :class => "btn btn-primary" %>		
			</td>
			<td width = 10%>	
				<%= button_to 'Delete', question_path(question), :method => :delete, :data => {:confirm => "Are you sure you want to erase your thoughts? "} , :class => "btn btn-danger" %>
			</td>
		</tr>	
	<% end %>
</table>

<h3>Add your questions here: </h3>
<%= form_for @question, :url => questions_path  do |f| %>
	<%= render :partial => 'form', :locals => { :f => f } %>
	<%= f.submit "Post and get Answers" , :class => "btn btn-default" %>
<% end %>	

<%= link_to "About" , about_questions_path , :class => "btn btn-default " %>